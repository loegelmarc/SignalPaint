  @*<title>@ViewData["Title"] - SignalPaint</title>*@

  <style>
    body {
      position: absolute;
      margin: 0;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      font-family: sans-serif;
      font-size: 13px;
      padding: 1em;
      box-sizing: border-box;
    }

    #touches, #force {
      opacity: 0;
    }

    h1 {
      margin-top: 0;
      color: #ccc;
    }

    canvas {
      position: absolute;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
    }

    #info {
      z-index: 1;
      position: absolute;
      bottom: 1em;
    }

    .selectColor {
      width: 4em;
      height: 4em;
      border: 1em solid;
      cursor: pointer;
      margin: 0;
      border-color: white;
      border-radius: 4em;
    }

      .selectColor.active {
        border-color: gray;
      }

    input[type="color"] {
      opacity: 0;
      display: block;
      width: 32px;
      height: 32px;
      border: none;
      border-radius: 16px;
    }

    #color-picker-wrapper {
      float: left;
    }
  </style>
</head>
